# Chafftafarian Chaff Generator Configuration
# Copy this file to .env and modify the values as needed

# Target directory for generated chaff files
# Default: /home/$USER/.chaff
TARGET_DIRECTORY=/home/$USER/.chaff

# Delete all generated files after completion
# Default: false
DELETE_AFTER_COMPLETION=false

# Fill available drive space with chaff files
# When true, ignores file count settings and fills based on available space
# Default: false
FILL_DRIVE=false

# Minimum disk space to leave available (in MB)
# Set to 0MB to fill drive to capacity
# Default: 100MB
MINIMUM_REMAINING_DISK_SPACE=100MB

# File size constraints
# Default min: 0.1MB, max: 10MB
MIN_FILE_SIZE=0.1MB
MAX_FILE_SIZE=10MB

# File count constraints (ignored when FILL_DRIVE=true)
# Default min: 100, max: 10000
MIN_FILE_COUNT=100
MAX_FILE_COUNT=10000

# Types of chaff files to generate (comma-separated)
# Available: txt, jpg, eml, pdf, docx, xlsx, csv
# Default: txt,jpg,eml,pdf,docx,xlsx,csv
CHAFF_FILE_TYPES=txt,jpg,eml,pdf,docx,xlsx,csv

# Languages to use for file content and names (comma-separated)
# Available: en, es, fr, de, cn, jp, ru
# Default: en,es,fr,de,cn,jp,ru
INCLUDE_LANGUAGES=en,es,fr,de,cn,jp,ru